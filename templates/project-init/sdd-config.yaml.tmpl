# SDD Project Configuration
# Generated by /sdd-init

project:
  name: "{{PROJECT_NAME}}"
  type: "{{PROJECT_TYPE}}"  # new | legacy
  description: "{{PROJECT_DESCRIPTION}}"

# Spec directory location
specs:
  directory: "docs/specs"
  checklist: "docs/specs/06-spec-checklist.md"

# Requirements sources
sources:
  confluence: []      # e.g., ["PAGE-123", "PAGE-456"]
  jira: []            # e.g., ["PROJ-100"]
  figma: []           # e.g., ["https://figma.com/file/..."]
  files: []           # e.g., ["docs/prd.md"]

# Agent Teams configuration
teams:
  max_members: 3      # Maximum parallel team members
  model: "sonnet"     # Model for team members
  max_rework_cycles: 3  # Rework attempts before escalation

# Quality gate settings
quality:
  require_tests: true
  require_lint: true
  categories:
    - ARCH
    - API
    - DM
    - COMP
    - TEST
    - SEC
    - PERF
    - UI

# Integration settings
integration:
  create_pr: true
  update_changelog: true
  branch_prefix: "sdd/"
